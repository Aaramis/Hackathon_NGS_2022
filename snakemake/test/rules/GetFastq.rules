rule getFastq :
    params :
       ncbi_id =  __ncbi_id,
       GF_Repertory = __repertory_GF

    output :
        output_GF = __output_GF

    message :
        "GetFastq with sra toolkit for {params.ncbi_id} SRAID"

    singularity :
        __container_GF  
 
    shell :
        " vdb-config --restore-defaults;\
        for ncbi_id in {params.ncbi_id}; do \
            prefetch -f yes $ncbi_id -O {params.GF_Repertory} ;\
        done"