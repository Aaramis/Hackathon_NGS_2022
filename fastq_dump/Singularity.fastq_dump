Bootstrap: docker
FROM: ubuntu:20.04

%post
    apt-get update
    apt-get install -y tar wget
    wget https://ftp-trace.ncbi.nlm.nih.gov/sra/sdk/3.0.0/sratoolkit.3.0.0-ubuntu64.tar.gz
    tar -xvzf sratoolkit.3.0.0-ubuntu64.tar.gz
    export CHEMIN=$(pwd)
    export PATH=$PATH:$CHEMIN/sratoolkit.3.0.0-ubuntu64/bin/
    cd sratoolkit.3.0.0-ubuntu64
    vdb-config --restore-defaults
    
%environment
    export PATH=/sratoolkit.3.0.0-ubuntu64/bin/:$PATH

%runscript